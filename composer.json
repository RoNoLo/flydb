{
    "name": "ronolo/jsondatabase",
    "description": "A lightweight, document database",
    "keywords": ["flat", "file", "db", "document", "nosql", "json"],
    "homepage": "http://github.com/ronolo/jsondatabase",
    "license": "MIT",
    "authors": [
        {
            "name": "Ronald Locke"
        }
    ],
    "require": {
        "php": ">= 7.2",
        "ext-json": "*",
        "league/flysystem": "^1.0",
        "ronolo/jsonquery": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "league/flysystem-ziparchive": "^1.0",
        "league/flysystem-memory": "^1.0"
    },
    "suggest": {
        "league/flysystem-ziparchive": "Allows to have a single ZIP file as database",
        "league/flysystem-memory": "Allows to have a database in memory",
        "league/flysystem-cached-adapter": "Allows to have a memory/persistent cache like database"
    },
    "autoload": {
        "psr-4": {
            "RoNoLo\\JsonDatabase\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/src/",
            "tests/integration"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/ronolo/jsonquery.git"
        }
    ]
}
