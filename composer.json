{
    "name": "ronolo/flydb",
    "description": "A lightweight, document database",
    "keywords": ["flat", "file", "db", "document", "nosql", "json"],
    "homepage": "http://github.com/ronolo/flydb",
    "license": "MIT",
    "authors": [
        {
            "name": "Ronald Locke"
        }
    ],
    "require": {
        "php": ">= 7.2",
        "ext-json": "*",
        "league/flysystem": "^1.0",
        "ronolo/jsonquery": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "league/flysystem-ziparchive": "^1.0"
    },
    "suggest": {
        "league/flysystem-ziparchive": "Allows to have a single ZIP file as database"
    },
    "autoload": {
        "psr-4": {
            "RoNoLo\\Flydb\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RoNoLo\\Flydb\\": [
                "tests/src/",
                "tests/integration"
            ]
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/ronolo/jsonquery.git"
        }
    ]
}
